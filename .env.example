# PashuAarogyam - Environment Configuration
# Copy this file to .env and update with your actual values

# =================== API KEYS ===================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY_DISEASE=your_api_key_here
GEMINI_API_KEY_CHATBOT=your_api_key_here

# =================== CHATBOT CONFIGURATION ===================
CHATBOT_OFFLINE_MODE=false
CHATBOT_ENABLE_FALLBACK=true
RUN_GEMINI_HEALTH_CHECK=false

# =================== RATE LIMITING ===================
GEMINI_MIN_INTERVAL=2.0
GEMINI_MAX_RETRIES=3
GEMINI_BASE_BACKOFF=5.0
GEMINI_MAX_BACKOFF=300.0

# =================== CACHING ===================
GEMINI_ENABLE_CACHE=true
GEMINI_CACHE_TTL=3600
GEMINI_MAX_CACHE_SIZE=100

# =================== DATABASE CONFIGURATION ===================
# MongoDB connection string (already configured in app.py)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# =================== FLASK CONFIGURATION ===================
FLASK_SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# =================== UPLOAD CONFIGURATION ===================
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=static/uploads

# =================== VOICE & SPEECH SETTINGS ===================
DEFAULT_VOICE_LANGUAGE=en-US
DEFAULT_TEXT_LANGUAGE=en

# =================== SECURITY SETTINGS ===================
# Session timeout in minutes
SESSION_TIMEOUT=1440  # 24 hours

# CORS settings (if needed)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com